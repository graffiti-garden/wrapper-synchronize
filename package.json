{
  "name": "@graffiti-garden/synchronize",
  "version": "0.2.11",
  "description": "The heart of Graffiti",
  "types": "./dist/src/index.d.ts",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./tests": {
      "import": {
        "types": "./dist/tests/index.d.ts",
        "default": "./dist/tests.mjs"
      }
    }
  },
  "files": [
    "src",
    "dist",
    "tests",
    "package.json",
    "README.md"
  ],
  "author": "Theia Henderson",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:js": "tsx esbuild.config.mts",
    "build": "rm -rf dist && npm run build:types && npm run build:js",
    "docs": "typedoc --options typedoc.json",
    "prepublishOnly": "npm update && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graffiti-garden/api.git"
  },
  "bugs": {
    "url": "https://github.com/graffiti-garden/api/issues"
  },
  "homepage": "https://api.graffiti.garden/classes/Graffiti.html",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsx": "^4.19.2",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@graffiti-garden/api": "^0.2.11",
    "@types/json-schema": "^7.0.15",
    "ajv": "^8.17.1",
    "fast-json-patch": "^3.1.1"
  }
}
